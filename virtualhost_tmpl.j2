<VirtualHost *:80>
        ServerName {{server_name}}
        ServerAdmin {{server_admin}}
        DocumentRoot /home/{{install_user}}/{{project_name}}/web
        CustomLog /var/log/httpd_{{project_name}}/access_log combined
        ErrorLog /var/log/httpd_{{project_name}}/error_log

        <Directory "/home/{{install_user}}/{{project_name}}/web">
                allow from all
                allowoverride all
                Options -Indexes FollowSymLinks
        </Directory>
</VirtualHost>
